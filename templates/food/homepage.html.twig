{% extends 'base.html.twig' %}

{% block body %}
<div class="row">
    <div class="col-lg-5">

    </div>
    <div class="col-lg-12 new main dash">
        <div class="col-lg-12 full-width-tabs">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                    <tr class="tablica_boja">
                        <th>{% trans %}Ime hrane{% endtrans %}</th>
                        <th>{% trans %}Kategorija hrane{% endtrans %}</th>
                    </tr>
                    </thead>
                    <tbody id="data">
                    {% for food in foods %}
                    <tr>
                        <td>
                            <a href="{{ path('app_category', { slug: food.slug }) }}">
                                {{ food.name|trans }}
                            </a>
                        </td>
                        {% if food.category != null %}
                            <td>
                                {{ food.category.title|trans }}
                            </td>
                        {% else %}
                            <td>
                                <b>
                                    {% trans %}Nema kategorije!{% endtrans %}
                                </b>
                            </td>
                        {% endif %}
                    </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<div class="text-center">
    {{ knp_pagination_render(foods) }}
</div>

{% endblock %}

